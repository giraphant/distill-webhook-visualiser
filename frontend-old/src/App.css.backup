* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html,
body {
  -webkit-overflow-scrolling: touch;
  overflow-y: auto;
}

.App {
  min-height: 100vh;
  background: var(--background);
  color: var(--foreground);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  -webkit-overflow-scrolling: touch;
}

header {
  background: var(--card);
  border-bottom: 1px solid var(--border);
  padding: 24px 32px;
}

header h1 {
  font-size: 28px;
  color: var(--foreground);
  margin-bottom: 4px;
  font-weight: 600;
  letter-spacing: -0.025em;
}

header p {
  color: var(--muted-foreground);
  font-size: 14px;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400px;
  color: var(--muted-foreground);
}

.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid var(--muted);
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.empty-state {
  max-width: 600px;
  margin: 80px auto;
  text-align: center;
  background: var(--card);
  padding: 48px;
  border-radius: var(--radius);
  border: 1px solid var(--border);
}

.empty-state h2 {
  font-size: 24px;
  margin-bottom: 12px;
  color: var(--card-foreground);
  font-weight: 600;
}

.empty-state p {
  color: var(--muted-foreground);
  margin-bottom: 16px;
}

.empty-state code {
  background: var(--muted);
  padding: 8px 12px;
  border-radius: calc(var(--radius) - 2px);
  font-family: 'Courier New', monospace;
  color: var(--destructive);
}

.dashboard {
  display: grid;
  grid-template-columns: 280px 1fr;
  gap: 24px;
  padding: 24px;
  max-width: 1400px;
  margin: 0 auto;
  background: var(--background);
  min-height: 100vh;
}

/* Sidebar */
.sidebar {
  background: var(--card);
  border-radius: var(--radius);
  padding: 20px;
  border: 1px solid var(--border);
  height: fit-content;
}

.sidebar h3 {
  font-size: 14px;
  font-weight: 600;
  color: var(--muted-foreground);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 16px;
}

.monitor-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
  max-height: 60vh;
  overflow-y: auto;
  padding-right: 4px;
  overscroll-behavior: contain;
}

/* Custom scrollbar for monitor list */
.monitor-list::-webkit-scrollbar {
  width: 6px;
}

.monitor-list::-webkit-scrollbar-track {
  background: transparent;
}

.monitor-list::-webkit-scrollbar-thumb {
  background: var(--muted-foreground);
  border-radius: 3px;
  opacity: 0.3;
}

.monitor-list::-webkit-scrollbar-thumb:hover {
  background: var(--foreground);
  opacity: 0.5;
}

.monitor-item {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 12px;
  text-align: left;
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
}

.monitor-item:hover {
  background: var(--accent);
  border-color: var(--ring);
}

.monitor-item.active {
  background: var(--accent);
  border-color: var(--primary);
  box-shadow: 0 0 0 1px var(--ring);
}

.monitor-name {
  font-size: 13px;
  font-weight: 500;
  color: var(--card-foreground);
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.monitor-value {
  font-size: 16px;
  font-weight: 600;
  color: var(--primary);
}

/* Main Content */
.main-content {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
}

.stat-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 20px;
  border: 1px solid var(--border);
  transition: all 0.2s;
}

.stat-card:hover {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.stat-label {
  font-size: 12px;
  color: var(--muted-foreground);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 8px;
  font-weight: 500;
}

.stat-value {
  font-size: 28px;
  font-weight: 600;
  color: var(--card-foreground);
  letter-spacing: -0.025em;
}

.stat-value.small {
  font-size: 20px;
}

/* Chart */
.chart-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 24px;
  border: 1px solid var(--border);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24px;
  flex-wrap: wrap;
  gap: 16px;
}

.chart-header h2 {
  font-size: 20px;
  color: var(--card-foreground);
  margin-bottom: 4px;
  font-weight: 600;
  letter-spacing: -0.025em;
}

.chart-url {
  font-size: 12px;
  color: var(--primary);
  text-decoration: none;
  word-break: break-all;
}

.chart-url:hover {
  text-decoration: underline;
}

.time-range-buttons {
  display: flex;
  gap: 8px;
}

.time-btn {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 6px 16px;
  font-size: 13px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
  color: var(--card-foreground);
}

.time-btn:hover {
  background: var(--accent);
  border-color: var(--ring);
}

.time-btn.active {
  background: var(--primary);
  border-color: var(--primary);
  color: var(--primary-foreground);
}

.chart-container {
  margin: 24px 0;
}

.chart-summary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
  padding-top: 24px;
  border-top: 1px solid var(--border);
}

.summary-item {
  font-size: 14px;
  color: var(--muted-foreground);
}

.summary-item strong {
  color: var(--card-foreground);
  font-weight: 600;
}

/* Login */
.login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24px;
}

.login-card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 48px;
  max-width: 400px;
  width: 100%;
  border: 1px solid var(--border);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.login-card h1 {
  font-size: 28px;
  font-weight: 600;
  color: var(--foreground);
  margin-bottom: 8px;
  text-align: center;
  letter-spacing: -0.025em;
}

.login-subtitle {
  text-align: center;
  color: var(--muted-foreground);
  margin-bottom: 32px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: var(--card-foreground);
  margin-bottom: 8px;
}

.form-group input {
  width: 100%;
  background: var(--card);
  border: 1px solid var(--input);
  border-radius: calc(var(--radius) - 2px);
  padding: 10px 12px;
  font-size: 14px;
  color: var(--card-foreground);
  font-family: inherit;
  transition: all 0.2s;
}

.form-group input:focus {
  outline: none;
  border-color: var(--ring);
  box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
}

.login-error {
  background: var(--destructive);
  color: white;
  padding: 12px;
  border-radius: calc(var(--radius) - 2px);
  margin-bottom: 20px;
  font-size: 14px;
  text-align: center;
}

.login-btn {
  width: 100%;
  background: var(--primary);
  border: 1px solid var(--primary);
  border-radius: calc(var(--radius) - 2px);
  padding: 12px;
  font-size: 14px;
  font-weight: 500;
  color: var(--primary-foreground);
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
}

.login-btn:hover {
  opacity: 0.9;
}

/* Unit Edit Button */
.unit-edit-btn {
  background: var(--secondary);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 4px 12px;
  font-size: 13px;
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
  color: var(--secondary-foreground);
}

.unit-edit-btn:hover {
  background: var(--accent);
  border-color: var(--ring);
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: var(--card);
  border-radius: var(--radius);
  padding: 24px;
  max-width: 500px;
  width: 90%;
  border: 1px solid var(--border);
}

.modal-content h3 {
  font-size: 20px;
  font-weight: 600;
  color: var(--card-foreground);
  margin-bottom: 8px;
}

.modal-description {
  font-size: 14px;
  color: var(--muted-foreground);
  margin-bottom: 20px;
}

.unit-options {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8px;
  margin-bottom: 20px;
}

.unit-option {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 12px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
  color: var(--card-foreground);
}

.unit-option:hover {
  background: var(--accent);
  border-color: var(--ring);
}

.unit-option.active {
  background: var(--primary);
  border-color: var(--primary);
  color: var(--primary-foreground);
}

.custom-unit-input {
  margin-bottom: 20px;
}

.custom-unit-input label {
  display: block;
  font-size: 13px;
  font-weight: 500;
  color: var(--card-foreground);
  margin-bottom: 8px;
}

.custom-unit-input input {
  width: 100%;
  background: var(--card);
  border: 1px solid var(--input);
  border-radius: calc(var(--radius) - 2px);
  padding: 8px 12px;
  font-size: 14px;
  color: var(--card-foreground);
  font-family: inherit;
  transition: all 0.2s;
}

.custom-unit-input input:focus {
  outline: none;
  border-color: var(--ring);
  box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.05);
}

.modal-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
}

/* Constant form styles */
.constant-form {
  padding: 0;
  margin-top: 16px;
}

.constant-form .form-group {
  margin-bottom: 20px;
}

.constant-form .form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 500;
  font-size: 14px;
  color: var(--card-foreground);
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 10px 12px;
  border-radius: calc(var(--radius) - 2px);
  border: 1px solid var(--border);
  background: var(--background);
  color: var(--foreground);
  font-family: inherit;
  font-size: 14px;
  transition: all 0.2s;
}

.form-input:focus,
.form-textarea:focus {
  outline: none;
  border-color: var(--ring);
  box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.05);
}

.form-textarea {
  resize: vertical;
  min-height: 80px;
}

.color-picker-group {
  display: flex;
  gap: 12px;
  align-items: center;
}

.color-picker {
  width: 60px;
  height: 44px;
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  cursor: pointer;
  padding: 2px;
}

.color-value {
  color: var(--muted-foreground);
  font-size: 14px;
  font-family: monospace;
}

/* Mobile Layout Editor */
.mobile-layout-editor {
  max-width: 500px;
}

.mobile-layout-list {
  max-height: 60vh;
  overflow-y: auto;
  margin: 16px 0;
}

.mobile-layout-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: var(--background);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  margin-bottom: 8px;
}

.layout-item-info {
  flex: 1;
}

.layout-item-name {
  font-weight: 500;
  font-size: 14px;
  color: var(--card-foreground);
  margin-bottom: 6px;
}

.layout-item-controls {
  display: flex;
  gap: 12px;
  font-size: 13px;
  color: var(--muted-foreground);
}

.layout-item-controls label {
  display: flex;
  align-items: center;
  gap: 6px;
}

.height-input {
  width: 50px;
  padding: 4px 8px;
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 4px);
  background: var(--card);
  color: var(--card-foreground);
  font-size: 13px;
  text-align: center;
}

.layout-item-actions {
  display: flex;
  gap: 4px;
}

.btn-icon {
  background: var(--secondary);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 8px;
  cursor: pointer;
  color: var(--card-foreground);
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon:hover:not(:disabled) {
  background: var(--accent);
  border-color: var(--ring);
}

.btn-icon:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.btn-primary,
.btn-secondary {
  border-radius: calc(var(--radius) - 2px);
  padding: 8px 16px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
  border: 1px solid;
}

.btn-primary {
  background: var(--primary);
  border-color: var(--primary);
  color: var(--primary-foreground);
}

.btn-primary:hover {
  opacity: 0.9;
}

.btn-secondary {
  background: var(--card);
  border-color: var(--border);
  color: var(--card-foreground);
}

.btn-secondary:hover {
  background: var(--accent);
}

/* Manage Monitors */
.manage-btn {
  background: var(--secondary);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 4px 8px;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.2s;
}

.manage-btn:hover {
  background: var(--accent);
}

.modal-large {
  max-width: 700px;
}

.manage-list {
  max-height: 500px;
  overflow-y: auto;
  margin-bottom: 20px;
  -webkit-overflow-scrolling: touch;
}

.manage-item {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 16px;
  margin-bottom: 12px;
}

.manage-item.hidden {
  opacity: 0.5;
  background: var(--muted);
}

.manage-item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12px;
}

.manage-item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  align-items: center;
}

.manage-tag {
  background: var(--primary);
  color: var(--primary-foreground);
  padding: 4px 8px;
  border-radius: calc(var(--radius) - 4px);
  font-size: 12px;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
}

.tag-input {
  background: var(--card);
  border: 1px solid var(--input);
  border-radius: calc(var(--radius) - 4px);
  padding: 4px 8px;
  font-size: 12px;
  color: var(--card-foreground);
  font-family: inherit;
  width: 120px;
}

.tag-input:focus {
  outline: none;
  border-color: var(--ring);
}

.btn-icon {
  background: var(--secondary);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 4px);
  padding: 4px 8px;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 16px;
}

.btn-icon:hover {
  background: var(--accent);
}

.btn-danger:hover {
  background: var(--destructive);
  border-color: var(--destructive);
}

/* Tag Filter */
.tag-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-bottom: 16px;
}

.tag-filter-btn {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 4px);
  padding: 4px 12px;
  font-size: 12px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  color: var(--card-foreground);
}

.tag-filter-btn:hover {
  background: var(--accent);
}

.tag-filter-btn.active {
  background: var(--primary);
  border-color: var(--primary);
  color: var(--primary-foreground);
}

.monitor-tags {
  display: flex;
  gap: 4px;
  margin-top: 6px;
  flex-wrap: wrap;
}

.monitor-tag {
  background: var(--primary);
  color: var(--primary-foreground);
  padding: 2px 6px;
  border-radius: calc(var(--radius) - 4px);
  font-size: 10px;
  font-weight: 500;
}

/* Bento Grid Overview */
.bento-container {
  padding: 24px;
  max-width: 1600px;
  margin: 0 auto;
  -webkit-overflow-scrolling: touch;
  background: var(--background);
  min-height: 100vh;
}


.bento-grid {
  position: relative;
  margin: 0 auto;
}

.bento-item {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 16px;
  display: flex;
  flex-direction: column;
  transition: all 0.3s;
  cursor: pointer;
  position: relative;
}

.bento-item:hover {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  border-color: var(--ring);
}

.bento-item.alert {
  background: var(--primary);
  border-color: var(--primary);
  border-width: 2px;
}

.bento-item.alert h3,
.bento-item.alert .bento-value {
  color: var(--primary-foreground);
}

.bento-item.alert .threshold-btn {
  border-color: var(--primary-foreground);
  color: var(--primary-foreground);
}

.bento-item.alert .threshold-btn:hover {
  background: rgba(255, 255, 255, 0.2);
}

.bento-item.alert .bento-tag {
  background: var(--primary-foreground);
  color: var(--primary);
}

.bento-item.alert .bento-stat .label {
  color: var(--primary-foreground);
}

.bento-item.alert .bento-stat .value {
  color: var(--primary-foreground);
}

.bento-item.alert .bento-stats {
  border-top-color: rgba(255, 255, 255, 0.3);
}

.bento-item.alert .bento-mini-chart .recharts-line-curve {
  stroke: var(--primary-foreground) !important;
}

.bento-item.alert .bento-mini-chart path {
  stroke: var(--primary-foreground) !important;
}

.bento-item.alert .last-updated {
  color: var(--primary-foreground);
  opacity: 0.9;
}

/* React Grid Layout overrides */
.react-grid-item {
  transition: all 200ms ease;
  transition-property: left, top, width, height;
}

.react-grid-item:has(.threshold-popover) {
  z-index: 9999 !important;
}

.react-grid-item.cssTransforms {
  transition-property: transform, width, height;
}

.react-grid-item.resizing {
  transition: none;
  z-index: 100;
}

.react-grid-item.react-draggable-dragging {
  transition: none;
  z-index: 100;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

.react-grid-item > .react-resizable-handle {
  position: absolute;
  width: 20px;
  height: 20px;
}

.react-grid-item > .react-resizable-handle::after {
  content: "";
  position: absolute;
  right: 3px;
  bottom: 3px;
  width: 8px;
  height: 8px;
  border-right: 2px solid var(--muted-foreground);
  border-bottom: 2px solid var(--muted-foreground);
  opacity: 0.4;
}

.react-grid-item:hover > .react-resizable-handle::after {
  opacity: 1;
}

.bento-header {
  margin-bottom: 8px;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 8px;
  position: relative;
}

.bento-title-section {
  flex: 1;
  min-width: 0;
}

.bento-header h3 {
  font-size: 15px;
  font-weight: 600;
  color: var(--card-foreground);
  margin: 0 0 6px 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.threshold-btn {
  background: transparent;
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 4px);
  padding: 4px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--muted-foreground);
  transition: all 0.2s;
  flex-shrink: 0;
  z-index: 10;
  position: relative;
}

.threshold-btn:hover {
  background: var(--accent);
  color: var(--card-foreground);
  border-color: var(--ring);
}

.bento-tags {
  display: flex;
  gap: 4px;
  flex-wrap: wrap;
  margin-top: 4px;
}

.bento-tag {
  background: var(--primary);
  color: var(--primary-foreground);
  padding: 2px 8px;
  border-radius: calc(var(--radius) - 4px);
  font-size: 10px;
  font-weight: 500;
}

.bento-value {
  font-size: 28px;
  font-weight: 700;
  color: var(--primary);
  margin: auto 0;
  letter-spacing: -0.02em;
  line-height: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4px;
  transition: color 0.3s;
}

.last-updated {
  font-size: 11px;
  font-weight: 400;
  color: var(--muted-foreground);
  letter-spacing: 0;
  opacity: 0.7;
}

/* Constant cards should keep horizontal layout (no timestamp) */
.bento-value.constant-value {
  display: inline-flex;
  flex-direction: row;
  align-items: baseline;
}

.unit-text {
  font-size: 0.55em;
  font-weight: 700;
  opacity: 0.85;
  line-height: 1;
  position: relative;
  top: -0.1em;
}

/* 有折线图的卡片,数字不居中而是固定位置 */
.bento-value:has(+ .bento-mini-chart) {
  margin: 0;
  margin-top: 20px;
}

.bento-large .bento-value {
  font-size: 48px;
}

.bento-mini-chart {
  margin: 65px -4px 8px -4px;
  height: 120px;
}

.bento-stats {
  display: flex;
  gap: 12px;
  margin-top: auto;
  padding-top: 12px;
  border-top: 1px solid var(--border);
}

.bento-stat {
  display: flex;
  flex-direction: column;
  gap: 3px;
  flex: 1;
}

.bento-stat .label {
  font-size: 10px;
  color: var(--muted-foreground);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
}

.bento-stat .value {
  font-size: 14px;
  font-weight: 600;
  color: var(--card-foreground);
  line-height: 1.2;
}

.bento-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
  font-size: 11px;
  color: var(--muted-foreground);
}

.bento-changes {
  font-weight: 500;
}

.bento-records {
  opacity: 0.7;
}

/* Threshold Popover */
.threshold-popover {
  position: absolute;
  top: 40px;
  right: 0;
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 16px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  z-index: 10000;
  min-width: 240px;
}

.threshold-popover h4 {
  font-size: 14px;
  font-weight: 600;
  color: var(--card-foreground);
  margin: 0 0 12px 0;
}

.threshold-input-group {
  margin-bottom: 12px;
}

.threshold-input-group label {
  display: block;
  font-size: 12px;
  font-weight: 500;
  color: var(--muted-foreground);
  margin-bottom: 6px;
}

.threshold-input-group input {
  width: 100%;
  background: var(--background);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 8px;
  font-size: 13px;
  color: var(--card-foreground);
  font-family: inherit;
  transition: all 0.2s;
}

.threshold-input-group input:focus {
  outline: none;
  border-color: var(--ring);
  box-shadow: 0 0 0 2px var(--ring) / 20%;
}

.threshold-input-group input::placeholder {
  color: var(--muted-foreground);
  opacity: 0.5;
}

.alert-level-select {
  width: 100%;
  background: var(--background);
  border: 1px solid var(--border);
  border-radius: calc(var(--radius) - 2px);
  padding: 8px;
  font-size: 13px;
  color: var(--card-foreground);
  font-family: inherit;
  transition: all 0.2s;
  cursor: pointer;
}

.alert-level-select:focus {
  outline: none;
  border-color: var(--ring);
  box-shadow: 0 0 0 2px var(--ring) / 20%;
}

.threshold-popover-actions {
  display: flex;
  gap: 8px;
  margin-top: 16px;
}

.threshold-popover-actions button {
  flex: 1;
  padding: 8px;
  font-size: 13px;
  font-weight: 500;
  border-radius: calc(var(--radius) - 2px);
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
}

/* Active button state for view switcher */
.btn-secondary.active {
  background: var(--primary);
  color: var(--primary-foreground);
  border-color: var(--primary);
}

@media (max-width: 1024px) {
  .dashboard {
    grid-template-columns: 1fr;
  }

  .sidebar {
    order: 2;
  }

  .bento-container {
    padding: 16px;
  }
}
/* Settings Tabs */
.settings-tabs {
