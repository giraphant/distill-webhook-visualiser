/* Mobile Menu Styles - inspired by shadcn/ui */
.mobile-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(2px);
  z-index: 9999;
  animation: overlayShow 0.15s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes overlayShow {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.mobile-menu {
  position: fixed;
  top: 0;
  right: 0;
  width: 320px;
  max-width: 85vw;
  height: 100vh;
  background: var(--card);
  border-left: 1px solid var(--border);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  padding: 20px 0;
  animation: slideInFromRight 0.25s cubic-bezier(0.16, 1, 0.3, 1);
  overflow-y: auto;
}

@keyframes slideInFromRight {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

.mobile-menu-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 20px;
  margin: 2px 12px;
  background: none;
  border: none;
  border-radius: 6px;
  color: var(--foreground);
  font-size: 15px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: left;
  width: calc(100% - 24px);
  position: relative;
}

.mobile-menu-item:hover {
  background: var(--muted);
  color: var(--foreground);
}

.mobile-menu-item:active {
  transform: scale(0.98);
}

.mobile-menu-item.active {
  background: var(--primary);
  color: white;
}

.mobile-menu-item.active:hover {
  background: var(--primary);
  opacity: 0.9;
}

.mobile-menu-item svg {
  flex-shrink: 0;
  width: 18px;
  height: 18px;
  opacity: 0.9;
}

.mobile-menu-item span {
  flex: 1;
}

.mobile-menu-btn {
  min-width: 44px !important;
  min-height: 44px !important;
  border-radius: 8px;
  transition: all 0.15s ease;
}

.mobile-menu-btn:hover {
  background: var(--muted);
}

.mobile-menu-btn:active {
  transform: scale(0.95);
}

/* Mobile Responsive Styles */
@media (max-width: 768px) {
  /* Header adjustments - compact mobile layout */
  header {
    padding: 12px 16px;
    position: relative;
  }

  header h1 {
    font-size: 18px;
    margin-bottom: 0;
  }

  /* Dashboard layout - stack on mobile */
  .dashboard {
    grid-template-columns: 1fr;
    gap: 16px;
    padding: 16px;
  }

  /* Sidebar - make it horizontal on mobile */
  .sidebar {
    padding: 16px;
  }

  .monitor-list {
    display: flex;
    overflow-x: auto;
    gap: 8px;
    padding-bottom: 8px;
    -webkit-overflow-scrolling: touch;
  }

  .monitor-item {
    min-width: 200px;
    flex-shrink: 0;
  }

  /* Bento grid - single column on mobile */
  .bento-container {
    padding: 16px;
    -webkit-overflow-scrolling: touch;
    width: 100%;
    max-width: 100%;
  }

  .bento-grid {
    display: flex !important;
    flex-direction: column;
    gap: 16px;
    -webkit-overflow-scrolling: touch;
    width: 100% !important;
    align-items: stretch;
  }

  .bento-item {
    width: 100% !important;
    height: auto !important;
    position: static !important;
    transform: none !important;
    left: 0 !important;
    top: 0 !important;
    margin: 0 !important;
    touch-action: pan-y !important;
    cursor: default !important;
  }


  .bento-header {
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-between;
    gap: 8px;
  }

  .bento-title-section {
    flex: 1;
    min-width: 0;
  }

  .bento-value {
    font-size: 32px;
    margin-top: 8px;
    margin-bottom: 8px;
  }

  .bento-mini-chart {
    height: 100px;
    margin-bottom: 8px;
  }

  .bento-stats {
    grid-template-columns: repeat(3, 1fr);
    padding-top: 12px;
    margin-top: 8px;
  }

  /* Stats grid - single column on small screens */
  .stats-grid {
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  /* Chart card */
  .chart-card {
    padding: 16px;
  }

  .chart-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  .time-range-buttons {
    width: 100%;
    justify-content: space-between;
  }

  .chart-container {
    margin: 16px 0;
  }

  .chart-summary {
    grid-template-columns: 1fr;
    gap: 12px;
  }

  /* Modals - optimized for mobile */
  .modal-overlay {
    padding: 0;
    align-items: flex-end; /* Bottom sheet style on mobile */
  }

  .modal-content {
    width: 100%;
    max-width: 100%;
    margin: 0;
    padding: 24px 20px;
    max-height: 90vh;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    border-radius: var(--radius) var(--radius) 0 0; /* Only round top corners */
  }

  .modal-content h3 {
    font-size: 20px !important;
  }

  /* Larger inputs in modals */
  .custom-unit-input input,
  .pushover-input,
  input[type="text"],
  input[type="number"],
  input[type="password"],
  select {
    padding: 14px 12px !important;
    font-size: 16px !important; /* Prevents iOS zoom */
    min-height: 48px;
  }

  /* Larger buttons in modals */
  .modal-actions button,
  .pushover-actions button {
    padding: 14px 20px !important;
    font-size: 16px !important;
    min-height: 48px;
  }

  .modal-actions {
    gap: 12px;
    margin-top: 20px;
  }

  .modal h2 {
    font-size: 20px;
  }

  /* Tag filter - horizontal scroll */
  .tag-filter {
    overflow-x: auto;
    white-space: nowrap;
    padding-bottom: 8px;
  }

  /* Manage items */
  .manage-item {
    padding: 12px;
  }

  .manage-item-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .manage-item-actions {
    width: 100%;
    justify-content: flex-end;
  }

  /* Buttons - larger touch targets */
  .btn-primary,
  .btn-secondary,
  .btn-destructive {
    padding: 14px 20px !important;
    font-size: 16px !important;
    min-height: 48px;
  }

  /* Bell icon button for alerts - smaller on mobile */
  .threshold-btn {
    min-width: 32px !important;
    min-height: 32px !important;
    padding: 6px !important;
  }

  .threshold-btn svg {
    width: 16px !important;
    height: 16px !important;
  }

  /* FAB for adding constants */
  .fab {
    width: 60px !important;
    height: 60px !important;
    font-size: 24px !important;
  }

  /* Threshold popover - full screen on mobile for better UX */
  .threshold-popover {
    position: fixed !important;
    left: 50% !important;
    top: 50% !important;
    transform: translate(-50%, -50%) !important;
    width: 90%;
    max-width: 350px;
    z-index: 10001;
    max-height: 85vh;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  /* Larger touch targets for threshold inputs */
  .threshold-input-group input,
  .alert-level-select {
    padding: 14px 12px !important;
    font-size: 16px !important; /* Prevents iOS zoom on focus */
    min-height: 48px;
  }

  .threshold-input-group label {
    font-size: 14px !important;
    margin-bottom: 8px !important;
  }

  .threshold-popover h4 {
    font-size: 16px !important;
    margin-bottom: 16px !important;
  }

  .threshold-popover-actions button {
    padding: 14px !important;
    font-size: 16px !important;
    min-height: 48px;
  }

  /* Add backdrop overlay for threshold popover */
  .bento-item:has(.threshold-popover)::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 10000;
  }

  /* Empty state */
  .empty-state {
    margin: 40px 16px;
    padding: 32px 20px;
  }

  .empty-state h2 {
    font-size: 20px;
  }

  /* Login form */
  .login-container {
    padding: 20px;
  }

  .login-card {
    padding: 32px 20px;
  }

  /* Pushover config */
  .pushover-section {
    padding: 16px;
  }

  .pushover-grid {
    grid-template-columns: 1fr;
  }
}

